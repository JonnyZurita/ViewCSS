@import '../bootstrap'
@import '../theme'



.button
    color: $button-color
    background-color: $button-background-color
    border: 1px solid transparent
    display: inline-block
    font-weight: $button-font-weight
    text-align: center
    white-space: nowrap
    min-width 110px;
    vertical-align: middle
    user-select: none
    padding: $button-padding
    cursor pointer
    font-size: $button-font-size
    line-height: $button-line-height
    border-radius: $button-border-radius
    transition: all .15s ease
    box-shadow: $button-box-shadow
    &:hover
        box-shadow: $button-box-shadow-hover
        transform: translateY(-1px);

// Colors

.button

    &--primary
        color: $button-primary-color
        background-color: $button-primary-background-color
        &:hover
            background-color: lighten($button-primary-background-color, 10%)

    &--secondary
        background-color: $button-secondary-background-color
        color: $button-secondary-color
        &:hover
            background-color: lighten($button-secondary-background-color, 10%)

    &--success
        background-color: $button-success-background-color
        color: $button-success-color
        &:hover
            background-color: lighten($button-success-background-color, 10%)

    &--danger
        background-color: $button-danger-background-color
        color: $button-danger-color
        &:hover
            background-color: lighten($button-danger-background-color, 10%)

    &--warning
        background-color: $button-warning-background-color
        color: $button-warning-color
        &:hover
            background-color: lighten($button-warning-background-color, 10%)

    &--info
        background-color: $button-info-background-color
        color: $button-info-color
        &:hover
            background-color: lighten($button-info-background-color, 10%)

.button--outline
    box-shadow: none
    &.button--primary
        color: $button-primary-background-color
        background-color: $button-primary-color
        border-color: $button-primary-background-color
        &:hover
            color: $button-primary-color
            background-color: $button-primary-background-color

    &.button--secondary
        color: $button-secondary-background-color
        background-color: $button-secondary-color
        border-color: $button-secondary-background-color
        &:hover
            color: $button-secondary-color
            background-color: $button-secondary-background-color

    &.button--success
        color: $button-success-background-color
        background-color: $button-success-color
        border-color: $button-success-background-color
        &:hover
            color: $button-success-color
            background-color: $button-success-background-color

    &.button--danger
        color: $button-danger-background-color
        background-color: $button-danger-color
        border-color: $button-danger-background-color
        &:hover
            color: $button-danger-color
            background-color: $button-danger-background-color

    &.button--warning
        color: $button-warning-background-color
        background-color: $button-warning-color
        border-color: $button-warning-background-color
        &:hover
            color: $button-warning-color
            background-color: $button-warning-background-color

    &.button--info
        color: $button-warning-background-color
        background-color: $button-warning-color
        border-color: $button-warning-background-color
        &:hover
            color: $button-warning-color
            background-color: $button-warning-background-color

// Sizes

.button
    &--mini
        font-size: $button-mini-font-size
        padding: $button-mini-padding
        min-width: $button-mini-min-width

    &--small
        font-size: $button-small-font-size
        padding: $button-small-padding

    &--large
        font-size: $button-large-font-size
        padding: $button-large-padding
        min-width: $button-large-min-width

    &--long
        width: 100%

// Types

.button
    &--round
        border-radius: 20px;
        padding: $button-large-padding;

    &--cyrcle
        border-radius: 50%;
        padding: 10px 15px;
        width: 40px;
        height: 40px;

    &--loading
        position: relative
        pointer-events: none
        &-before
            pointer-events: none
            content: ""
            position: absolute
            left: -1px
            top: -1px
            right: -1px
            bottom: -1px
            border-radius: inherit
            background-color: hsla(0,0%,100%,.35);
